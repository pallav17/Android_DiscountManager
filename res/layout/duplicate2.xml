        android:textSize="30sp"  />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="copyright @Discount Manager, 2014" />
        
</LinearLayout>